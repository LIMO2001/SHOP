    <script>
        // You can add auto-refresh functionality here if needed
        $(document).ready(function() {
            console.log('Dashboard loaded successfully');
            
            // Auto-refresh every 30 seconds (optional)
            // setInterval(() => {
            //     location.reload();
            // }, 30000);
        });
    </script>
}