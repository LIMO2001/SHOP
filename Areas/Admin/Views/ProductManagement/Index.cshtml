@using LaptopStore.Models
@model List<LaptopStore.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-laptop me-2"></i>Manage Products
        </h1>
        <a href="@Url.Action("Create", "ProductManagement", new { area = "Admin" })" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add New Product
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Products</h6>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-laptop fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Get started by adding your first product.</p>
                    <a href="@Url.Action("Create", "ProductManagement", new { area = "Admin" })" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Add Product
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="productsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Featured</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <strong>@product.Name</strong>
                                        <br>
                                        <small class="text-muted">@product.Processor</small>
                                    </td>
                                    <td>@product.Category?.Name</td>
                                    <td>
                                        <span class="fw-bold text-success">$@product.Price</span>
                                    </td>
                                    <td>
                                        <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                            @product.StockQuantity
                                        </span>
                                    </td>
                                    <td>
                                        @if (product.IsFeatured)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-star me-1"></i>Featured
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Edit", "ProductManagement", new { area = "Admin", id = product.Id })" 
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("ProductDetails", "Store", new { id = product.Id })" 
                                               target="_blank" class="btn btn-outline-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("Delete", "ProductManagement", new { area = "Admin", id = product.Id })" 
                                                  class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);

        // Initialize DataTable if you include the library
        $(document).ready(function() {
            // If you have DataTables library, uncomment below:
            // $('#productsTable').DataTable({
            //     responsive: true,
            //     order: [[6, 'desc']]
            // });
        });
    </script>
}