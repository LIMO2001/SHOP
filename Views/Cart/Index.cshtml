@model List<CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2>Shopping Cart</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a href="@Url.Action("Index", "Store")">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <img src="@item.Product.ImageUrl" class="img-fluid" alt="@item.Product.Name">
                                </div>
                                <div class="col-md-6">
                                    <h5>@item.Product.Name</h5>
                                    <p class="text-muted">@item.Product.Processor, @item.Product.RAM</p>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center mb-2">
                                        <form method="post" action="@Url.Action("UpdateQuantity", "Cart")" class="d-flex align-items-center">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">-</button>
                                            <span class="mx-2">@item.Quantity</span>
                                            <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">+</button>
                                        </form>
                                    </div>
                                    <p class="h5">$@(item.Product.Price * item.Quantity)</p>
                                    <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <p class="h4 text-primary">Total: $@ViewBag.CartTotal</p>
                        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg w-100">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>