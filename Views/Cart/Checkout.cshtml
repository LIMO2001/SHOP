@model LaptopStore.Models.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">

                    <h2 class="mb-4">
                        <i class="fas fa-shopping-cart me-2 text-success"></i>Secure Checkout
                    </h2>

                    <form asp-controller="Cart" asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Shipping Address -->
                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label fw-semibold">Shipping Address *</label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3"
                                      placeholder="Enter your complete shipping address" required></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger small"></span>
                        </div>

                        <!-- Payment Method -->
                        <div class="card border-0 bg-light mt-4">
                            <div class="card-body">
                                <h5 class="card-title mb-3">
                                    <i class="fas fa-credit-card me-2"></i>Payment Method
                                </h5>
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" value="Credit Card" checked>
                                        <label class="form-check-label" for="creditCard">Credit/Debit Card</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="PayPal">
                                        <label class="form-check-label" for="paypal">PayPal</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="Cash on Delivery">
                                        <label class="form-check-label" for="cod">Cash on Delivery</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Terms Agreement -->
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" id="termsAgreement" required>
                            <label class="form-check-label" for="termsAgreement">
                                I agree to the Terms and Conditions *
                            </label>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Back to Cart
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-lock me-1"></i>Place Order
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery Validation -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Optional: confirm before placing order
        document.querySelector("form").addEventListener("submit", function (e) {
            const confirmOrder = confirm("Are you sure you want to place this order?");
            if (!confirmOrder) {
                e.preventDefault();
            }
        });
    </script>
}
