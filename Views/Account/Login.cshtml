@using LaptopStore.Controllers
@using static LaptopStore.Controllers.AccountController
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center">
                    <i class="fas fa-sign-in-alt"></i> Login to Your Account
                </h3>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3"></div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-user-plus"></i> Create New Account
                    </a>
                </div>

                <hr class="my-4">

                <div class="text-center">
                    <small class="text-muted">
                        By logging in, you agree to our Terms of Service and Privacy Policy
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Clear validation messages when user starts typing
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', function() {
                const field = this.getAttribute('asp-for');
                if (field) {
                    const span = document.querySelector(`[data-valmsg-for="${field}"]`);
                    if (span) {
                        span.textContent = '';
                    }
                }
            });
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}