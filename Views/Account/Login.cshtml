@using LaptopStore.Controllers
@using static LaptopStore.Controllers.AccountController
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <!-- DKLEmpire Logo and Welcome Message -->
                <div class="mb-3">
                    <div class="logo-container mb-2">
                        <div class="logo-frame">
                            <img src="/images/logo.png" alt="DKLEmpire" class="logo-img">
                        </div>
                    </div>
                    <h2 class="text-primary mb-1">LaptopStore</h2>
                    <p class="text-muted mb-0">Welcome to DKLEmpire Tech</p>
                </div>
                <p class="small text-muted mt-2">
                    Type your e-mail or phone number to log in or create a DKLEmpire account.
                </p>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Existing Login Form -->
                <form method="post" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login with Email
                        </button>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3"></div>
                </form>

                <div class="divider d-flex align-items-center my-4">
                    <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                </div>

                <!-- External Login Providers -->
                <div class="mb-4">
                    <div class="d-grid gap-2">
                        <a asp-action="ExternalLogin" asp-route-provider="Google" asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                           class="btn btn-outline-danger btn-lg">
                            <i class="fab fa-google"></i> Continue with Google
                        </a>
                        <a asp-action="ExternalLogin" asp-route-provider="Facebook" asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                           class="btn btn-outline-primary btn-lg">
                            <i class="fab fa-facebook"></i> Continue with Facebook
                        </a>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="mb-0">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-user-plus"></i> Create New Account
                    </a>
                </div>

                <hr class="my-4">

                <div class="text-center">
                    <small class="text-muted">
                        By logging in, you agree to our Terms of Service and Privacy Policy
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }
        
        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .logo-frame {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            border: 4px solid #fff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            overflow: hidden;
        }
        
        .logo-img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            border-radius: 50%;
        }
        
        .card-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-bottom: 2px solid #dee2e6;
            padding: 2rem 1rem;
        }
        
        .card-header h2 {
            font-weight: 700;
            letter-spacing: 0.5px;
            margin-top: 1rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Clear validation messages when user starts typing
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', function() {
                const field = this.getAttribute('asp-for');
                if (field) {
                    const span = document.querySelector(`[data-valmsg-for="${field}"]`);
                    if (span) {
                        span.textContent = '';
                    }
                }
            });
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}