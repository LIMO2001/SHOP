@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="LaptopStore - Your trusted partner for high-quality laptops and computing solutions">
    <title>DKL-Empire - @ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/images/logo.png" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <!-- Logo with Image -->
            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Store")">
                <img src="~/images/logo.png" alt="LaptopStore" height="35" class="me-2">
                <span class="brand-text">LaptopStore</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Store")">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-th-large me-1"></i>Categories
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-gamepad me-2"></i>Gaming Laptops</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-briefcase me-2"></i>Business Laptops</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-graduation-cap me-2"></i>Student Laptops</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Search", "Store")"><i class="fas fa-search me-2"></i>Browse All</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Search", "Store")">
                            <i class="fas fa-search me-1"></i>Search
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-tag me-1"></i>Deals
                        </a>
                    </li>
                </ul>
                
                <div class="navbar-nav ms-auto">
                    @{
                        var userName = Context.Session.GetString("UserName");
                        var userEmail = Context.Session.GetString("UserEmail");
                        var userRole = Context.Session.GetString("UserRole");
                    }
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item">
                            <a class="nav-link position-relative" href="@Url.Action("Index", "Cart")">
                                <i class="fas fa-shopping-cart me-1"></i>Cart
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" id="cartCount">
                                    0
                                </span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-heart me-1"></i>Wishlist
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                    <i class="fas fa-user text-white" style="font-size: 0.8rem;"></i>
                                </div>
                                <span>@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <div class="dropdown-item-text">
                                        <div class="fw-bold">@userName</div>
                                        <small class="text-muted">@userEmail</small>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                
                                @if (userRole == "Admin")
                                {
                                    <li>
                                        <h6 class="dropdown-header">Admin Panel</h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "ProductManagement", new { area = "Admin" })">
                                            <i class="fas fa-laptop me-2"></i>Products
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "CategoryManagement", new { area = "Admin" })">
                                            <i class="fas fa-tags me-2"></i>Categories
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-user me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-shopping-bag me-2"></i>Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Cart")">
                                            <i class="fas fa-shopping-cart me-2"></i>Shopping Cart
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" id="logoutForm">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary btn-sm ms-2 px-3" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus me-1"></i>Register
                            </a>
                        </li>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid px-0">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-0 rounded-0" role="alert">
                <div class="container">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3 fs-5"></i>
                        <div class="flex-grow-1">@TempData["Success"]</div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-0 rounded-0" role="alert">
                <div class="container">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle me-3 fs-5"></i>
                        <div class="flex-grow-1">@TempData["Error"]</div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5">
        <div class="container py-5">
            <div class="row g-4">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-brand mb-3">
                        <img src="~/images/logo.png" alt="LaptopStore" height="40" class="me-2">
                        <span class="h5 fw-bold text-white">LaptopStore</span>
                    </div>
                    <p class="text-light mb-3" style="opacity: 0.8;">
                        Your trusted partner for high-quality laptops and computing solutions. 
                        We offer the latest technology with competitive prices and exceptional customer service.
                    </p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3" style="opacity: 0.8;">
                            <i class="fab fa-facebook-f fs-5"></i>
                        </a>
                        <a href="#" class="text-light me-3" style="opacity: 0.8;">
                            <i class="fab fa-twitter fs-5"></i>
                        </a>
                        <a href="#" class="text-light me-3" style="opacity: 0.8;">
                            <i class="fab fa-instagram fs-5"></i>
                        </a>
                        <a href="#" class="text-light" style="opacity: 0.8;">
                            <i class="fab fa-linkedin-in fs-5"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-white mb-3">Shop</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Store")" class="text-light text-decoration-none hover-primary">All Products</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Gaming Laptops</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Business Laptops</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Student Laptops</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Latest Deals</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-white mb-3">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Contact Us</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Shipping Info</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Returns & Refunds</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">FAQ</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Warranty</a></li>
                    </ul>
                </div>

                <!-- Company -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-white mb-3">Company</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Careers</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Terms of Service</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none hover-primary">Blog</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-white mb-3">Contact Us</h6>
                    <ul class="list-unstyled text-light" style="opacity: 0.8;">
                        <li class="mb-3">
                            <i class="fas fa-envelope text-primary me-2"></i>
                            <small>DKLEmpire@laptopstore.com</small>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone text-primary me-2"></i>
                            <small>+254 799 406 453</small>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <small>08-Jabavu-Lane<br>Nairobi, Kenya</small>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-clock text-primary me-2"></i>
                            <small>Mon-Fri: 9AM-6PM<br>Sat: 10AM-4PM</small>
                        </li>
                    </ul>
                </div>
            </div>
            
            <hr class="my-4 bg-secondary">
            
            <!-- Bottom Footer -->
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light mb-0" style="opacity: 0.8;">
                        &copy; 2025 LaptopStore. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="payment-methods">
                        <span class="text-light me-2" style="opacity: 0.8;">We accept:</span>
                        <i class="fab fa-cc-visa text-light me-2" style="opacity: 0.8;"></i>
                        <i class="fab fa-cc-mastercard text-light me-2" style="opacity: 0.8;"></i>
                        <i class="fab fa-cc-paypal text-light me-2" style="opacity: 0.8;"></i>
                        <i class="fab fa-cc-apple-pay text-light" style="opacity: 0.8;"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="backToTop" class="btn btn-primary rounded-circle shadow" style="position: fixed; bottom: 20px; right: 20px; width: 50px; height: 50px; display: none;">
        <i class="fas fa-chevron-up"></i>
    </button>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Update cart count
        async function updateCartCount() {
            try {
                const response = await fetch('/Cart/GetCartCount');
                if (response.ok) {
                    const count = await response.json();
                    $('#cartCount').text(count);
                }
            } catch (error) {
                console.error('Error updating cart count:', error);
            }
        }

        // Back to top button
        const backToTopButton = document.getElementById('backToTop');
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopButton.style.display = 'block';
            } else {
                backToTopButton.style.display = 'none';
            }
        });

        backToTopButton.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Load cart count on page load
        $(document).ready(function() {
            updateCartCount();
            
            // Add active class to current page link
            const currentUrl = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                if ($(this).attr('href') === currentUrl) {
                    $(this).addClass('active');
                }
            });
        });

        // Confirm logout
        document.getElementById('logoutForm')?.addEventListener('submit', function(e) {
            if (!confirm('Are you sure you want to logout?')) {
                e.preventDefault();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>