@model List<Product>
@{
    ViewData["Title"] = ViewBag.CategoryName ?? "Category Products";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Store")">Home</a></li>
            <li class="breadcrumb-item active">@(ViewBag.CategoryName ?? "Category")</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@(ViewBag.CategoryName ?? "All Products")</h2>
        <span class="badge bg-primary fs-6">@Model.Count products</span>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-laptop fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No products in this category</h4>
            <p class="text-muted">Check back later for new arrivals!</p>
            <a href="@Url.Action("Index", "Store")" class="btn btn-primary">Back to Home</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 product-card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text flex-grow-1 text-muted">
                                <small>@product.Processor, @product.RAM, @product.Storage</small>
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h5 text-primary mb-0">$@product.Price</span>
                                    <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                        @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                    </span>
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("ProductDetails", "Store", new { id = product.Id })" class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-success w-100">
                                                <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>